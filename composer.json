{
  "name" : "login-memory-persistent/login",
  "description": "System to validate user login and password credentials from a list.",
  "require": {
    "php": "^8.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.5",
    "phpstan/phpstan": "^1.9",
    "phpstan/phpstan-phpunit": "^1.3",
    "symplify/easy-coding-standard": "^11.1",
    "symplify/phpstan-extensions": "^11.1"
  },
  "autoload": {
    "psr-4": {
      "LoginMemoryPersistent\\": ["src/Login/"]
    }
  },
  "autoload-dev": {
    "psr-4": {
      "TestsLoginMemoryPersistent\\": ["tests/src/Login/"]
    }
  },
  "scripts": {
    "tests": "phpunit",
    "test-coverage": "phpunit --coverage-html build/coverage",
    "check-cs": "ecs check",
    "fix-cs": "ecs check --fix",
    "phpstan": "phpstan analyse --ansi"
  }
}
